{
  "name": "mage",
  "description": "MAGE game development platform for Node.js",
  "version": "1.0.0",
  "author": "Wizcorp K.K. <info@wizcorp.jp>",
  "homepage": "https://wizcorp.jp/mage/",
  "bugs": {
    "mail": "info@wizcorp.jp",
    "url": "http://github.com/mage/mage/issues"
  },
  "engines": {
    "node": "^4 || ^5 || ^6 || ^7"
  },
  "scripts": {
    "dev:setup": "node ./scripts/githooks.js",
    "test:outdated": "npm outdated --color always --silent || true",
    "test:security": "retire && npm run test:outdated",
    "test:lint": "eslint --ext .js,.json .",
    "test:code-analysis": "run-s test:lint test:security",
    "test:unit": "mocha -R mocha-reporter ./test/index.js",
    "test:unit:filter": "npm run test:unit -- --grep",
    "test:unit-rebuild": "npm rebuild && npm run test:unit",
    "test": "run-s test:lint test:unit test:security",
    "postinstall": "link-require ./lib:lib && node ./scripts/install.js",
    "report:coverage": "istanbul cover _mocha --root lib --include-all-sources --report html --dir coverage-report -- -R mocha-reporter ./test/index.js",
    "report:complexity:create-config": "yaml2json .eslintrc.yml > .eslintrc",
    "report:complexity:create-report": "plato -r -d complexity-report -e .eslintrc ./lib ./test ./scripts",
    "report:complexity:cleanup-config": "rm .eslintrc",
    "report:complexity": "run-s report:complexity:*",
    "report": "run-p report:complexity report:coverage",
    "docker": "node ./scripts/docker.js",
    "ci:install": "npm run docker -- npm install .",
    "ci:test:code-analysis": "npm run docker -- npm run test:code-analysis",
    "ci:test:unit": "npm run docker -- npm run test:unit-rebuild",
    "ci:test:unit:node4": "cross-env NODE_VERSION=4 npm run ci:test:unit",
    "ci:test:unit:node5": "cross-env NODE_VERSION=5 npm run ci:test:unit",
    "ci:test:unit:node6": "cross-env NODE_VERSION=6 npm run ci:test:unit",
    "ci:test:unit:node7": "cross-env NODE_VERSION=7 npm run ci:test:unit",
    "ci:test:unit:all": "run-s ci:test:unit:node*",
    "ci": "npm install npm-run-all && run-s ci:install ci:test:code-analysis ci:test:unit:all",
    "docs:build": "node ./scripts/compile-docs",
    "clean:deps": "node ./scripts/rmrf.js node_modules",
    "clean:report": "node ./scripts/rmrf.js html-report plato-report",
    "clean:docs": "node ./scripts/rmrf.js docs",
    "clean": "npm run clean:deps && npm run clean:report"
  },
  "bin": {
    "mage": "./bin/mage.js"
  },
  "dependencies": {
    "async": "0.9.0",
    "chalk": "0.5.1",
    "codependency": "1.0.0",
    "commander": "2.6.0",
    "epipebomb": "1.0.0",
    "forwarded-for": "1.0.1",
    "function-arguments": "1.0.8",
    "glob": "4.3.2",
    "handlebars": "4.0.6",
    "heapdump": "0.3.7",
    "http-close": "0.0.2",
    "js-yaml": "3.2.5",
    "jsonlint": "1.6.2",
    "link-require": "0.0.6",
    "localstash": "0.2.0",
    "memoizee": "0.4.4",
    "memwatch-next": "0.2.10",
    "mime": "1.2.11",
    "mkdirp": "0.5.0",
    "multipart-parser": "0.0.2",
    "netmask": "1.0.5",
    "node-uuid": "1.4.7",
    "panopticon": "0.2.0",
    "rumplestiltskin": "0.1.0",
    "semver": "5.3.0",
    "source-map": "0.1.31",
    "tabalot": "0.8.0",
    "tomes": "0.2.3",
    "wizcorp-deep-copy.js": "0.1.0",
    "wizcorp-timer.js": "0.2.0",
    "ws": "1.1.1"
  },
  "optionalPeerDependencies": {
    "graylog2": "~0.1.3",
    "mysql": "^2.4.1",
    "couchbase": "^2.1.6",
    "memcached": "~0.2.6",
    "redis": "~0.9.0",
    "manta": "~1.0.1",
    "sqlite3": "~3.1.8",
    "memorystream": "~0.2.0",
    "aws-sdk": "~1.15.0",
    "es": "~0.4.4",
    "node-zookeeper-client": "~0.2.0",
    "mdns": "~2.2.1",
    "zmq": "~2.15.3",
    "ldapjs": "~0.7.1"
  },
  "devDependencies": {
    "cross-env": "4.0.0",
    "eslint": "3.17.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-mocha": "4.9.0",
    "git-message": "1.0.1",
    "glob": "4.3.2",
    "istanbul": "0.4.5",
    "mkdirp": "0.5.0",
    "mktemp": "0.4.0",
    "mocha": "3.2.0",
    "mocha-reporter": "0.0.2",
    "mysql": "2.5.4",
    "npm-run-all": "4.0.2",
    "plato": "1.7.0",
    "power-assert": "1.4.2",
    "retire": "1.2.12",
    "rimraf": "2.2.8",
    "sqlite3": "3.1.8",
    "yamljs": "0.2.9",
    "zmq": "2.15.3"
  },
  "main": "lib/mage",
  "repository": {
    "type": "git",
    "url": "https://github.com/mage/mage.git"
  },
  "licence": "MIT"
}
